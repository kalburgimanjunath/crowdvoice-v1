<% title "Announcements" %>
<% stylesheet 'grid'%>
<div class="content">
	<h2>Announcements</h2>
	<p class="options"><%= link_to "New Announcement", new_admin_announcement_path %></p>		
	<table width="100%" cellpadding="0" cellspacing="0">
	  <tr>
	    <th>Title</th>
	    <th>Voice</th>
	    <th>URL</th>		
			<th width="25"></th>
	    <th width="25"></th>
	  </tr>
	<% for announcement in @announcements %>
	  <tr>
	    <td><%= announcement.title %></td>
			<td><%= link_to announcement.voice.title, announcement.voice %></td>
			<td><%= announcement.url %></td>				
	    <td width="25"><%= link_to "Edit", edit_admin_announcement_path(announcement) %></td>
	    <td width="25"><%= link_to "Delete", [:admin, announcement], :confirm => "Are you sure?", :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>