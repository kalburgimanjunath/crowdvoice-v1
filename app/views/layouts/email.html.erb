	<body style="margin: 0; padding: 0">
		<table cellpadding="0" cellspacing="0" width="100%" height="100%" style="background-color: #dfdfdb;">
			<tr>
				<td valign="top">
					<table cellpadding="0" cellspacing="0" width="100%" style="text-align: center; padding-bottom: 27px;">
						<tr>
							<td width="" valign="top"><div style="height: 9px; background-color: #009784; overflow: hidden;"></div></td>
							<td width="175" valign="top" style="background-color: #ffffff;">
								<img src="http://c1736512.cdn.cloudfiles.rackspacecloud.com/sidebar.png" style="display: block" width="175" height="524"/>
							</td>
							<%= yield %>
							<td width="" valign="top"><div style="height: 9px; background-color: #009784; overflow: hidden;"></div></td>
						</tr>
					</table>
					<table cellpadding="0" cellspacing="0" style="text-align: center; padding-bottom: 27px" width="100%">
